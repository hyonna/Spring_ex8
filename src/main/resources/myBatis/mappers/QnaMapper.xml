<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="QnaMapper">
  	
  	<insert id="qnaReply" parameterType="com.iu.board.qna.QnaDTO">
  		<selectKey keyProperty="num" resultType="java.lang.Integer" order="BEFORE">
  		select qna_seq.nextval from dual
  		</selectKey>
  		insert into qna values(#{num}, #{title}, #{writer}, #{contents}, sysdate, 0, #{ref}, #{step}+1, #{depth}+1)
  	</insert>
  	
  	<update id="qnaReplyUpdate" parameterType="com.iu.board.qna.QnaDTO">
		update qna set step=step+1 where ref=#{ref} and step&gt;#{step}  	
  	</update>
  	
  	
  	<insert id="qnaWrite" parameterType="com.iu.board.BoardDTO">
  		<selectKey keyProperty="num" resultType="java.lang.Integer" order="BEFORE">
  		select qna_seq.nextval from dual
  		</selectKey>
  		insert into qna values(#{num}, #{title}, #{writer}, #{contents}, sysdate, 0, qna_seq.currval, 0, 0)
  	</insert>
  	
  	<update id="qnaUpdate" parameterType="com.iu.board.qna.QnaDTO">
  		update qna set title=#{title}, writer=#{writer}, contents=#{contents} where num=#{num}
  	</update>
  	
  	<delete id="qnaDelete" parameterType="java.lang.Integer">
  		delete qna where num=#{num}
  	</delete>
  	
  	
  	<resultMap type="com.iu.board.qna.QnaDTO" id="qna">
		<id property="num" column="num"/>
		<result property="title" column="title"/>
		<result property="writer" column="writer"/>
		<result property="contents" column="contents"/>
		<result property="reg_date" column="reg_date"/>
		<result property="hit" column="hit"/>
		<result property="ref" column="ref"/>
		<result property="step" column="step"/>
		<result property="depth" column="depth"/>
		<collection property="files" resultMap="fileResult" ofType="com.iu.file.FileDTO" javaType="java.util.ArrayList">
		</collection>
 	</resultMap>
 	
 	<resultMap type="com.iu.file.FileDTO" id="fileResult">
 			<id property="fnum" column="fnum"/>
			<result property="fname" column="fname"/>
			<result property="oname" column="oname"/>
 	</resultMap>
  	
  	<select id="qnaSelect" parameterType="java.lang.Integer" resultMap="qna">
  		select * from qna Q full join files F using(num) where num=#{num}
  	</select>
  	
  	<select id="qnaList" resultType="com.iu.board.qna.QnaDTO" parameterType="com.iu.util.PageMaker">
  		select * from
  		(select rownum R, Q.* from
  		(select * from qna where
  		<choose>
  			<when test="kind == 1">
  				title
  			</when>
  			<when test="kind == 2">
  				writer
  			</when>
  			<otherwise>
  				contents
  			</otherwise>
  		</choose>
  			like '%'||#{search}||'%' order by ref desc, step asc) Q)
  			where R between #{startRow} and #{lastRow}
  	</select>
  	
  	<select id="totalCount" parameterType="com.iu.util.PageMaker" resultType="java.lang.Integer">
  		select count(num) from qna where
  		<choose>
  			<when test="kind == 1">
  				title
  			</when>
  			<when test="kind == 2">
  				writer
  			</when>
  			<otherwise>
  				contents
  			</otherwise>
  		</choose>
  			like '%'||#{search}||'%'
  	</select>
  </mapper>